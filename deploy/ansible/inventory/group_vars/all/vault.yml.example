# Ansible Vault secrets template
# Create your vault with: ansible-vault create vault.yml
# Edit with: ansible-vault edit vault.yml
#
# DO NOT commit the actual vault.yml without encryption!
# This .example file shows the required structure.

# MongoDB admin user password
vault_mongo_admin_password: "your-secure-admin-password-here"

# MongoDB application user passwords
vault_mongo_prod_app_password: "your-secure-prod-password-here"
vault_mongo_staging_app_password: "your-secure-staging-password-here"

# Session secret for Express
vault_session_secret: "your-secure-session-secret-here"

# Let's Encrypt email for SSL certificate notifications
vault_certbot_email: "your-email@example.com"

# Deploy user password (for sudo)
vault_deploy_user_password: "your-deploy-user-password-here"

# Admin secret for error admin page (production access: /admin/errors?token=SECRET)
vault_admin_secret: "your-random-admin-secret-here"
