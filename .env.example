# MongoDB Connection
# Development: no auth
MONGODB_URI=mongodb://localhost:27017/crowdtowers
# Production: with auth (set in .env.prod, never commit!)
# MONGODB_URI=mongodb://username:password@localhost:27017/crowdtowers?authSource=admin

# Server Configuration
PORT=3000
NODE_ENV=development

# Base URL for invite links (no trailing slash)
# Development: http://localhost:3000
# Production: https://crowdtowers.wochenentwicklung.com
BASE_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-secret-key-here

# Admin Access
# Used to protect /admin/errors endpoint in production
ADMIN_SECRET=your-admin-secret-here
